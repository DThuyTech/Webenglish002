    ViewData["Title"] = "editAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/assets/css/edit_info.css">
<div class="space">
    <p> SPACE</p>
</div>
<!-- INFO -->
<div class="body">
    <div class="row">

        <div class="col-sm-7">
            <div class="item-info">
                <div class="avt-info">
                    <img class="avt-img" src="~/assets/images/avt.jpg" alt="">
                    <button class="Btn">
                        <svg class="svg" viewBox="0 0 512 512">
                            <path d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z"></path>
                        </svg>
                    </button>
                </div>
                <div class="body-info">
                    <div class="panel-info">
                        <div class="panel-heading">
                            <div class="panel-title">INFOMATION</div>
                        </div>
                        <form class="panel-body">
                            <div class="coolinput">
                                <label for="input" class="text">Full Name:</label>
                                <input type="text" placeholder="Write here..." name="input" class="input" required>
                            </div>
                            <div class="coolinput">
                                <label for="input" class="text">Class:</label>
                                <input type="text" placeholder="Write here..." name="input" class="input">
                            </div>
                            <div class="coolinput">
                                <label for="input" class="text">Phone Number:</label>
                                <input type="text" placeholder="Write here..." name="input" class="input">
                            </div>
                            <div class="panel-foot">
                                <div class="btn-box">
                                    <button class="bookmarkBtn">
                                        <span class="IconContainer">
                                            <svg viewBox="0 0 384 512" height="0.9em" class="icon">
                                                <path d="M0 48C0 21.5 21.5 0 48 0l0 48V441.4l130.1-92.9c8.3-6 19.6-6 27.9 0L336 441.4V48H48V0H336c26.5 0 48 21.5 48 48V488c0 9-5 17.2-13 21.3s-17.6 3.4-24.9-1.8L192 397.5 37.9 507.5c-7.3 5.2-16.9 5.9-24.9 1.8S0 497 0 488V48z" />
                                                <style>
                                                    svg {
                                                        fill: #fff;
                                                    }
                                                </style>
                                            </svg>

                                        </span>
                                        <p class="text">Save</p>
                                    </button>
                                    <button class="noselect"><span class="text">Cancel</span><span class="icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M24 20.188l-8.315-8.209 8.2-8.282-3.697-3.697-8.212 8.318-8.31-8.203-3.666 3.666 8.321 8.24-8.206 8.313 3.666 3.666 8.237-8.318 8.285 8.203z"></path></svg></span></button>
                                    <button class="btn-reset">
                                        Reset
                                    </button>
                                </div>

                            </div>
                        </form>

                    </div>

                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="item-info">
                <div class="head-right">
                    <div class="item-head"></div>
                </div>
            </div>
            <div class="item-right">
                <div class="box-right">
                </div>
            </div>
        </div>
    </div>
</div>
